class PerformanceChartPainter extends CustomPainter {
  final List<double> data;
  final int? selectedIndex;
  final DateTime? earliestDate; // Track earliest completion date

  PerformanceChartPainter(this.data, {this.selectedIndex, this.earliestDate});

  @override
  void paint(Canvas canvas, Size size) {
    if (data.isEmpty) return;

    final solidPaint = Paint()
      ..color = const Color(0xFF590df2)
      ..strokeWidth = 4
      ..style = PaintingStyle.stroke
      ..strokeCap = StrokeCap.round
      ..strokeJoin = StrokeJoin.round;

    final dottedPaint = Paint()
      ..color = const Color(0xFF590df2).withOpacity(0.4)
      ..strokeWidth = 3
      ..style = PaintingStyle.stroke
      ..strokeCap = StrokeCap.round
      ..strokeJoin = StrokeJoin.round;

    final fillPaint = Paint()
      ..shader = LinearGradient(
        begin: Alignment.topCenter,
        end: Alignment.bottomCenter,
        colors: [
          const Color(0xFF590df2).withOpacity(0.3),
          const Color(0xFF590df2).withOpacity(0),
        ],
      ).createShader(Rect.fromLTWH(0, 0, size.width, size.height))
      ..style = PaintingStyle.fill;

    // Find the index where future projection starts (after today)
    // Data is ordered from oldest to newest (today is the last element)
    int todayIndex = data.length - 1; // Last element is always today
    
    final maxValue = data.isEmpty ? 1.0 : data.reduce(math.max);
    final minValue = data.isEmpty ? 0.0 : data.reduce(math.min);
    final range = maxValue - minValue;

    final path = Path();
    final fillPath = Path();
    final dottedPath = Path();
    
    List<Offset> points = [];

    // Calculate all points first
    for (int i = 0; i < data.length; i++) {
      final x = (i / math.max(data.length - 1, 1)) * size.width;
      final normalizedValue = range > 0 ? (data[i] - minValue) / range : 0.5;
      final y = size.height - (normalizedValue * size.height * 0.8) - (size.height * 0.1);
      points.add(Offset(x, y));
    }

    if (points.isEmpty) return;

    // Start paths
    fillPath.moveTo(0, size.height);
    fillPath.lineTo(points[0].dx, points[0].dy);
    path.moveTo(points[0].dx, points[0].dy);

    // Draw smooth curves using cubic bezier
    for (int i = 0; i < points.length - 1; i++) {
      final p0 = i > 0 ? points[i - 1] : points[i];
      final p1 = points[i];
      final p2 = points[i + 1];
      final p3 = i < points.length - 2 ? points[i + 2] : points[i + 1];

      // Calculate control points for smooth curve with higher tension for smoother appearance
      final tension = 0.25; // Reduced from 0.4 for smoother curves
      final cp1x = p1.dx + (p2.dx - p0.dx) * tension;
      final cp1y = p1.dy + (p2.dy - p0.dy) * tension;
      final cp2x = p2.dx - (p3.dx - p1.dx) * tension;
      final cp2y = p2.dy - (p3.dy - p1.dy) * tension;

      // Decide whether this segment should be solid or dotted
      // Solid for past/present (up to today), dotted for future
      if (i < todayIndex) {
        // Solid line for past and today
        path.cubicTo(cp1x, cp1y, cp2x, cp2y, p2.dx, p2.dy);
      } else {
        // Dotted line for future projection
        if (i == todayIndex) {
          dottedPath.moveTo(p1.dx, p1.dy);
        }
        dottedPath.cubicTo(cp1x, cp1y, cp2x, cp2y, p2.dx, p2.dy);
      }
      
      fillPath.cubicTo(cp1x, cp1y, cp2x, cp2y, p2.dx, p2.dy);
    }

    // Close fill path
    fillPath.lineTo(points.last.dx, size.height);
    fillPath.lineTo(0, size.height);
    fillPath.close();

    // Draw gradient fill and lines
    canvas.drawPath(fillPath, fillPaint);
    
    // Draw solid line for past/present data
    canvas.drawPath(path, solidPaint);
    
    // Draw dotted line for future projection
    if (todayIndex < data.length - 1) {
      _drawDashedPath(canvas, dottedPath, dottedPaint);
    }

    // NOTE: Data point pins/circles removed as per user request

    // Draw selected point indicator (for tooltip interaction)
    if (selectedIndex != null && selectedIndex! >= 0 && selectedIndex! < points.length) {
      final point = points[selectedIndex!];
      
      // Draw vertical line
      final linePaint = Paint()
        ..color = const Color(0xFF590df2).withOpacity(0.3)
        ..strokeWidth = 1.5
        ..style = PaintingStyle.stroke;
      canvas.drawLine(
        Offset(point.dx, 0),
        Offset(point.dx, size.height),
        linePaint,
      );

      // Draw outer glow circle
      final glowPaint = Paint()
        ..color = const Color(0xFF590df2).withOpacity(0.3)
        ..style = PaintingStyle.fill;
      canvas.drawCircle(point, 10, glowPaint);

      // Draw main circle
      final circlePaint = Paint()
        ..color = const Color(0xFF590df2)
        ..style = PaintingStyle.fill;
      canvas.drawCircle(point, 6, circlePaint);

      // Draw white outline
      final circleOutlinePaint = Paint()
        ..color = Colors.white
        ..strokeWidth = 2
        ..style = PaintingStyle.stroke;
      canvas.drawCircle(point, 6, circleOutlinePaint);
    }
  }

  void _drawDashedPath(Canvas canvas, Path path, Paint paint) {
    final dashWidth = 8.0;
    final dashSpace = 6.0;
    
    final metrics = path.computeMetrics();
    for (final metric in metrics) {
      double distance = 0.0;
      bool draw = true;
      
      while (distance < metric.length) {
        final length = draw ? dashWidth : dashSpace;
        final end = math.min(distance + length, metric.length);
        
        if (draw) {
          final extractPath = metric.extractPath(distance, end);
          canvas.drawPath(extractPath, paint);
        }
        
        distance = end;
        draw = !draw;
      }
    }
  }

  @override
  bool shouldRepaint(PerformanceChartPainter oldDelegate) {
    return oldDelegate.selectedIndex != selectedIndex || 
           oldDelegate.data != data ||
           oldDelegate.earliestDate != earliestDate;
  }
}
