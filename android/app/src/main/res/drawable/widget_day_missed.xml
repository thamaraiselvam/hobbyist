<?xml version="1.0" encoding="utf-8"?>
<!-- Subtle dim ring — past day missed. No fill, no ✗ — just a faint outline
     so it reads as "empty" rather than "failure". Slightly more visible than
     the future-day ring so the user can distinguish past from future. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <solid android:color="#00000000" />
    <stroke
        android:width="1.5dp"
        android:color="#30FFFFFF" />
</shape>
