<?xml version="1.0" encoding="utf-8"?>
<!--
  Streak home-screen widget layout (rolling 7-day window, today at index 6).
  Structure:
    1. Hero streak counter  (ðŸ”¥ N days) â€” largest, top-left
    2. Motivational subtitle â€” directly below hero
    3. Flexible spacer â€” pushes bottom section down
    4. Weekday label row â€” M T W T F S S
    5. Streak indicator row â€” 7 circles inside a pill container
  Day circles are TextViews whose background is swapped at runtime by
  StreakWidget.kt to reflect each day's completion state.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="12dp"
    android:paddingBottom="10dp">

    <!-- â”€â”€ Hero streak counter â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <TextView
        android:id="@+id/streak_hero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”¥ 0 days"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:includeFontPadding="false" />

    <!-- â”€â”€ Subtitle / onboarding-aware motivational copy â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <TextView
        android:id="@+id/widget_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Start your journey"
        android:textColor="#99FFFFFF"
        android:textSize="12sp"
        android:includeFontPadding="false" />

    <!-- Flexible spacer â€” distributes leftover height between top and bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- â”€â”€ Weekday label row â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <!--
      Padding matches the pill container's horizontal padding so columns
      stay optically aligned with the circles below them.
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day_label_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="M"
            android:textColor="#40FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/day_label_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="T"
            android:textColor="#40FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/day_label_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="W"
            android:textColor="#40FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/day_label_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="T"
            android:textColor="#40FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/day_label_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="F"
            android:textColor="#40FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/day_label_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S"
            android:textColor="#40FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/day_label_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S"
            android:textColor="#FFFFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

    </LinearLayout>

    <!-- â”€â”€ Streak indicator row (pill container) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/widget_streak_row_bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:orientation="horizontal">

        <!-- Day 0 (6 days ago) -->
        <TextView
            android:id="@+id/day_circle_0"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/widget_day_pending"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <!-- Day 1 (5 days ago) -->
        <TextView
            android:id="@+id/day_circle_1"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/widget_day_pending"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <!-- Day 2 (4 days ago) -->
        <TextView
            android:id="@+id/day_circle_2"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/widget_day_pending"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <!-- Day 3 (3 days ago) -->
        <TextView
            android:id="@+id/day_circle_3"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/widget_day_pending"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <!-- Day 4 (2 days ago) -->
        <TextView
            android:id="@+id/day_circle_4"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/widget_day_pending"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <!-- Day 5 (yesterday) -->
        <TextView
            android:id="@+id/day_circle_5"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/widget_day_pending"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

        <!-- Day 6 (today â€” always rightmost) -->
        <TextView
            android:id="@+id/day_circle_6"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/widget_day_today"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:includeFontPadding="false" />

    </LinearLayout>

</LinearLayout>
